@{
}

<input type="text" name="userName" id="userName" value="" />
<button id="btn">登录</button>

@section Scripts{
    <script>
        $('#btn').click(function () {
            $.post('/account/login', { userName: $('#userName').val() }, function (json) {
                if (json.success) {
                    location.href = "/";
                }
            })
        })
    </script>
}